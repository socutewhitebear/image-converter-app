{
  "name": "image-converter-app",
  "description": "Convert image file Formats.",
  "version": "1.0.0",
  "author": "socutewhitebear",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "build": {
    "appId": "com.socutewhitebear.imageconverter",
    "productName": "ImageConverter",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "AppImage"
    }
  },
  "devDependencies": {
    "@electron/packager": "^18.3.6",
    "electron": "^35.1.5",
    "electron-builder": "^26.0.12"
  },
  "dependencies": {
    "@tailwindcss/cli": "^4.1.3",
    "sharp": "^0.34.1",
    "tailwindcss": "^4.1.3"
  }
}
